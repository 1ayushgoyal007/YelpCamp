<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campgrounds</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/root.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/campgrounds.css">


</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light margin-bottom">
        <a class="navbar-brand" href="/">YelpCamp</a>
        <button onclick="show()" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
           <% if(!currentUser){  %>
              <li class="nav-item ">
                <a class="nav-link" href="/login">Login<span class="sr-only"></span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/register">SignUp</a>
              </li>
          <% }else{  %>
              <li class="nav-item">
                <a class="nav-link" href="/campgrounds">Signed in as <strong><%= currentUser.username %></strong></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
           <% } %>
           <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
          </ul>
        </div>
      </nav>

      <% if(error && error.length > 0){  %>
        <div class="error" >
          <%= error %>
        </div>
      <% } %>
      <% if(success && success.length > 0){  %>
        <div class="success" >
          <%= success %>
        </div>
      <% } %>

      
<div class="container" >
<header class="jumbotron" >
    <div class="container" >
        <div class="index-header" >  
          <i class="fa fa-free-code-camp fa-3x" aria-hidden="true"></i>
          <h1>Welcome to YelpCamp!</h1>
        </div>
        
        <p>Submit Your Adventure or Camping Experience for the Explorer's Community.</p>
        <p>
            <a class="btn btn-primary btn-large"  href="/campgrounds/new">Add New Campground</a>
        </p>
    </div>
</header>
    <h3>Our Handpicked Campgrounds!</h3>
    <div class="row" >
      
        <% for(var i=0;i<campgrounds.length;i++){  %>
            <div class="col-md-3 col-sm-6" >
                <div class="thumbnail" >
                <img class="each-image" src="<%= campgrounds[i].image %>" alt="Campground-Image">
                <div class="caption" >
                    <h4> <%= campgrounds[i].name %> </h4>
                </div>
                <button class="btn btn-primary" >
                  <a href="/campgrounds/<%= campgrounds[i]._id  %> " style="color: white;">More Info</a>
                </button>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script src="/script/script.js"></script>
</body>
</html>