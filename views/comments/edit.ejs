<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/root.css">

    <title>Add New Comment</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light margin-bottom">
        <a class="navbar-brand" href="/">YelpCamp</a>
        <button onclick="show()" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if(!currentUser){  %>
               <li class="nav-item ">
                 <a class="nav-link" href="/login">Login<span class="sr-only"></span></a>
               </li>
               <li class="nav-item">
                 <a class="nav-link" href="/register">SignUp</a>
               </li>
           <% }else{  %>
               <li class="nav-item">
                 <a class="nav-link" href="/campgrounds">Signed in as <strong><%= currentUser.username %></strong></a>
               </li>
               <li class="nav-item">
                 <a class="nav-link" href="/logout">Logout</a>
               </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
           </ul>
        </div>
      </nav>


      <% if(error && error.length > 0){  %>
        <div class="error" >
          <%= error %>
        </div>
      <% } %>
      <% if(success && success.length > 0){  %>
        <div class="success" >
          <%= success %>
        </div>
      <% } %>


    <div class="container" >
        <div class="row" >
            <div style="width: 50%; margin: 0 auto;" >
            <h1>Edit </h1>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT"  method="POST">
                <div class="form-group"style="margin-top:20px;" >
                    <input class="form-control" type="text" value= "<%= comment.text%>" name="comment[text]">
                </div>
                
                <div class="form-group" >
                    <button class="btn btn-primary btn-block" >Comment</button>                    
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>









    <script src="/script/script.js"></script>

</body>
</html>